<!-- Left side column. contains the logo and sidebar -->
            <aside class="left-side sidebar-offcanvas">
                <!-- sidebar: style can be found in sidebar.less -->
                <section class="sidebar">
                    <!-- Sidebar user panel -->
                    <div class="user-panel">
                        <div class="pull-left image">
                        	<%= image_tag current_user.avatar.url, :class=>"img-circle", :alt=>"User Image" %>
                        </div>
                        <div class="pull-left info">
                            <p>Hello, <%= current_user.first_name.capitalize %></p>

                            <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                        </div>
                    </div>

                    <!-- sidebar menu: : style can be found in sidebar.less -->
                    <ul class="sidebar-menu">
                        <li <% if active == 'Dashboard' %> class="active"<% end %> >
                        	<%= link_to raw("<i class=\"fa fa-dashboard\"></i> <span>Dashboard</span>"), :action=>"index"%>
                        </li>
                        <li <% if active == 'Profile' %> class="active"<% end %> >
                        	<%= link_to raw("<i class=\"fa fa-user\"></i> <span>Profile</span>"), :action=>"profile"%>
                        </li>
                        <li <% if active == 'Handy Mails' %> class="active"<% end %> >
                            <%= link_to raw("<i class=\"fa fa-user\"></i> <span>Handy Mails</span>"), :action=>"handy_mails"%>
                        </li>
                    </ul>
                </section>
                <!-- /.sidebar -->
            </aside>